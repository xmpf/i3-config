#class                  #border #backgr #text #indicator #child
client.focused          #ff0000 #101010 #fffff0 #ff0000 #ff0000
client.focused_inactive #000000 #202020 #ffffff #484e50 #000000
client.unfocused        #000000 #303030 #888888 #292d22 #0c0c0c
client.urgent           #ff0000 #987654 #ff0000 #ee0001 #0c0c0c
client.placeholder      #000000 #0c0c0c #ffffff #000000 #0c0c0c
client.background       #000000

# i3-gaps
smart_gaps off
gaps inner 3
gaps outer 3
hide_edge_borders none

### Startup
exec --no-startup-id \
       i3-msg workspace 1
exec --no-startup-id \
       "${XDG_CONFIG_HOME}/i3/tools/init-rofi.sh"
exec --no-startup-id \
       /usr/bin/pulseaudio --start --daemonize
# exec --no-startup-id /usr/bin/blueman-applet
# exec --no-startup-id /usr/bin/xfce4-clipman
exec_always --no-startup-id \
              /usr/bin/nm-applet

# exec_always --no-startup-id xautolock -time 10 -locker "i3lock-fancy -f Source-Sans-Pro"
# exec_always --no-startup-id picom

exec --no-startup-id \
       xrandr --output HDMI-2 \
              --mode 1920x1080 \
              --rate 60.00 \
              --output eDP-1 \
              --mode 1920x1080 \
              --rate 60.01 \
              --below HDMI-2 
